	if [ -e "/usr/lib/shutorial/debian-stable.squashfs" ]Â ; then
        echo "Cleaning the shutorial squashfs"
        rm /usr/lib/shutorial/debian-stable.squashfs
	fi
	if [ -e "/srv/http/shutorial" ]; then
		rm /srv/http/shutorial
	fi
}